# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/fovdark_db"
PGDATABASE="fovdark_db"
PGHOST="localhost"
PGPORT="5432"
PGUSER="username"
PGPASSWORD="password"

# Authentication Secrets
JWT_SECRET="your-super-secure-jwt-secret-key-change-in-production"
SESSION_SECRET="your-super-secure-session-secret-key-change-in-production"

# Google OAuth2 Configuration
GOOGLE_CLIENT_ID="your-google-oauth-client-id"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"

# Application Configuration
NODE_ENV="development"

# Email Configuration (for password recovery - optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Payment Configuration (optional for future payment integration)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Application URLs
FRONTEND_URL="http://localhost:5000"
BACKEND_URL="http://localhost:5000"

# File Storage (optional for downloads)
STORAGE_PATH="/uploads"
MAX_FILE_SIZE="50MB"

# Security Configuration
BCRYPT_ROUNDS="12"
MAX_LOGIN_ATTEMPTS="5"
LOCKOUT_TIME="300000"

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Rate Limiting
RATE_LIMIT_WINDOW="900000"
RATE_LIMIT_MAX="100"

# HWID Configuration
HWID_RESET_COOLDOWN="2592000000"

# License Configuration
DEFAULT_LICENSE_DURATION="2592000000"
MAX_LICENSES_PER_USER="1"

# Development Only
REPLIT_DOMAINS="your-replit-domain.replit.dev"
